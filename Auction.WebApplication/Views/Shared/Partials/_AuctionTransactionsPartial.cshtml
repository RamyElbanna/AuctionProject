<div class="row">
    <div class="col-md-12">
        <h3>Selected Item <input id="selectedItem" class="form-control" disabled value="" style="text-align:center"/></h3>
    </div>
</div>
<div class="row">
    <div class="col-md-4">
        <label class="col-form-label">Participant</label>
        <select id="biddersinAction" class="form-control">
            <option value="" disabled selected>All Bidders</option>
            @foreach (var item in ViewBag.Bidders)
            {
                <option value="@item.Id">@item.Name</option>
            }
        </select>
    </div>
    <div class="col-md-4">
        <label class="col-form-label">Your Bid</label>
        <input class="form-control" id="bidValue" />
    </div>
    <div class="col-md-4">
        <div style="visibility:hidden">just space</div>
        <button class="btn btn-primary" id="bidButton">Add</button>
    </div>
</div>
<div class="row">
    <table class="table table-striped">
        <thead class="table table-dark">
            <tr>
                <th>Counter</th>
                <th>Bidder</th>
                <th>Bid</th>
                <th>Profit</th>
            </tr>
        </thead>
        <tbody id="transactionBody"></tbody>
    </table>
</div>
<div class="row"> 
    <button class="btn btn-danger" id="saveAuctionBtn"> Save && Get Winner</button>
    <input disabled class="form-control d-none" id="auctionWinnerContainer" value=""  style="text-align:center"/>
</div>